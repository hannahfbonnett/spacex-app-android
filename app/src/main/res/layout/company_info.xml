<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/company_name"
        android:textSize="26sp"
        android:text="Company Name"
        android:layout_marginTop="@dimen/standard_margin"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/company_description"
        android:text="description"
        android:layout_marginTop="@dimen/standard_margin"
        android:layout_marginBottom="@dimen/standard_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:id="@+id/company_founder"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:text="Founder"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:id="@+id/company_founder_name"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:text="name"
            android:paddingEnd="8dp"
            android:paddingRight="8dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/company_info_divider_height"
        android:background="?android:attr/dividerHorizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:id="@+id/company_founded"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:paddingStart="@dimen/company_info_item_padding"
            android:paddingLeft="@dimen/company_info_item_padding"
            android:text="Founded"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:id="@+id/company_founded_year"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:text="year"
            android:paddingEnd="@dimen/company_info_item_padding"
            android:paddingRight="@dimen/company_info_item_padding"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/company_info_divider_height"
        android:background="?android:attr/dividerHorizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:id="@+id/company_employees"
            android:paddingStart="@dimen/company_info_item_padding"
            android:paddingLeft="@dimen/company_info_item_padding"
            android:text="Employees"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:id="@+id/company_employees_number"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:paddingEnd="@dimen/company_info_item_padding"
            android:paddingRight="@dimen/company_info_item_padding"
            android:text="number"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/company_info_divider_height"
        android:background="?android:attr/dividerHorizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:id="@+id/company_vehicles"
            android:paddingStart="@dimen/company_info_item_padding"
            android:paddingLeft="@dimen/company_info_item_padding"
            android:text="Vehicles"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:id="@+id/company_vehicles_number"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:paddingEnd="@dimen/company_info_item_padding"
            android:paddingRight="@dimen/company_info_item_padding"
            android:text="number"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/company_info_divider_height"
        android:background="?android:attr/dividerHorizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:id="@+id/company_launch_sites"
            android:paddingStart="@dimen/company_info_item_padding"
            android:paddingLeft="@dimen/company_info_item_padding"
            android:text="Launch sites"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:id="@+id/company_launch_sites_number"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:paddingEnd="@dimen/company_info_item_padding"
            android:paddingRight="@dimen/company_info_item_padding"
            android:text="number"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/company_info_divider_height"
        android:background="?android:attr/dividerHorizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:id="@+id/company_test_sites"
            android:paddingStart="@dimen/company_info_item_padding"
            android:paddingLeft="@dimen/company_info_item_padding"
            android:text="Test sites"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:id="@+id/company_test_sites_number"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:paddingEnd="@dimen/company_info_item_padding"
            android:paddingRight="@dimen/company_info_item_padding"
            android:text="number"/>

    </LinearLayout>



    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/company_links_title"
        android:layout_marginTop="@dimen/standard_margin"
        android:layout_marginBottom="@dimen/standard_margin"
        android:text="Links"
        android:textSize="18sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:id="@+id/company_website"
            android:paddingStart="@dimen/company_info_item_padding"
            android:paddingLeft="@dimen/company_info_item_padding"
            android:text="Website"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:id="@+id/company_website_link"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:paddingEnd="@dimen/company_info_item_padding"
            android:paddingRight="@dimen/company_info_item_padding"
            android:text="link"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/company_info_divider_height"
        android:background="?android:attr/dividerHorizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:id="@+id/company_flickr"
            android:paddingStart="@dimen/company_info_item_padding"
            android:paddingLeft="@dimen/company_info_item_padding"
            android:text="Flickr"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:id="@+id/company_flickr_link"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:paddingEnd="@dimen/company_info_item_padding"
            android:paddingRight="@dimen/company_info_item_padding"
            android:text="link"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/company_info_divider_height"
        android:background="?android:attr/dividerHorizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:id="@+id/company_twitter"
            android:paddingStart="@dimen/company_info_item_padding"
            android:paddingLeft="@dimen/company_info_item_padding"
            android:text="Twitter"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:id="@+id/company_twitter_link"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:paddingEnd="@dimen/company_info_item_padding"
            android:paddingRight="@dimen/company_info_item_padding"
            android:text="link"/>

    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>